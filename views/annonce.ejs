<html>
        <% include partials/header.ejs %>
<body style="background-color:#FAFAFA;">

<div class="container pb-3" style="margin-top:150px;">
    <div class="row mb-5">
        <div class="adContainer col col-lg-8" style="padding: 0;">
            <h2 class="mt-3"><%=ads.title%></h2>
            <div class="photoContainer">
                    <% for(var i=0; i< 3; i++){%>
                    <img src="/uploads/<%= ads.photo[i] || "default.png" %>" alt="photo">
                
                    <%}%>
          
            </div>
            <h3 class="text-uppercase"><%=ads.pseudo%></h3>
            <div class="d-flex" style="border: 1px solid #CCCCCC;">
                <span class="adPrice">Prix</span>
                <span class="adsPrice"><%=ads.price%> €</span>
            </div>
            <div class="d-flex" style="border: 1px solid #CCCCCC; border-top: 0;">
                <span class="adPrice">Ville</span>
                <span class="adsCity"><%=ads.city%></span> 
            </div>
            <h3 class="adDescription font-weight-bold">Description :</h3>
            <p><%=ads.description%></p>
        </div>
        <div class="col col-lg-4">
            <div >
                <div style="height:50px; border: 1px solid #CCCCCC; background-color: #E6E6E6;">
                    <h3 class="text-center text-lowercase"><%=ads.pseudo%></h3>
                </div>
                <div class="d-flex justify-content-center align-items-center mb-4" style="height:50px; border: 1px solid #CCCCCC; padding: 30px;">
                    <button class="rounded phoneNumberButtton" style="width: 300px; height: 40px; background-color:  #E6723D; color: white" value="">
                        Voir le numéro
                    </button>
                    <h6 class="phoneNumber"><%=ads.phone%></h6>
                    <%console.log(ads.phone)%>
                    
                </div>
            </div>
                <div>
                    <% if(userid == ads.user_id){ %>
                        <a href="/modify/<%=ads._id%>">
                            <button class="btn btn-primary mb-2">Modifier l'annonce</button>
                        </a>
                        <form class="" action="/remove/<%=ads._id%>" method="POST">
                            
                                <button class="btn btn-primary" type="button" data-toggle="modal" data-target="#exampleModalCenter">Supprimer l'annonce</button>
                                <!-- Modal -->
                                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">Suppression de l'annonce</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <span>Êtes-vous sûr de vouloir supprimer votre annonce</span>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            <a href="/remove/<%=ads._id%>"></a>
                                            <button type="submit" class="btn btn-danger">Supprimer</button>
                                        </a>
                                        </div>
                                        </div>
                                    </div>
                                    </div>
                            
                        </form>
                   <% }%>
                </div>
        </div> 
    </div>
</div>
</body>
<% include partials/footer.ejs %>
</html>