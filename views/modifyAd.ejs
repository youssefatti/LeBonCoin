<html>
        <% include partials/header.ejs %>
<body style="background-color:#FAFAFA;">

<div class="container">
<div class="container votreAnnonce pr-0 pl-0" style="border: 1px solid #CCCCCC;">
    <h6 class="sousTitre">Votre annonce</h6>
    <div class=" sousForm">
        <form class="formSize" action="/modify/<%=ads._id%>" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label>Titre de l'annonce</label>
                <input type="text" name="title" class="form-control" value="<%=ads.title%>">
            </div>
            <div class="form-group">
                <label>Text de l'annonce</label>
                <textarea class="form-control" name="description" rows="3" style="height: 200px;" value="<%=ads.description%>"></textarea>
            </div>
            <div class="form-group">
                <label>Prix</label>
                <input type="number" name="price" class="form-control" value="<%=ads.price%>">
            </div>
            <div class="form-group">
                <label>Photo</label>
                <input type="file" name="photo" class="form-control-file" alt="photo">
                <div>
                    <img class="mt-2" src="/uploads/<%=ads.photo%>" alt="">
                </div>
            </div>
    </div>
</div>

<div class="container localisation pr-0 pl-0 mb-3" style="border: 1px solid #CCCCCC;">
    <h6 class="sousTitre mb-0">Localisation</h6>
    <div class="sousForm pb-2 pt-2">
            <div class="form-group">
                <label>Ville ou code postal</label>
                <input type="text" name="city" class="form-control" value="<%=ads.city%>">
            </div>
    </div>
</div>  

<div class="container vosInformation pr-0 pl-0" style="border: 1px solid #CCCCCC;">
    <h6 class="sousTitre mb-0">Vos informations</h6>
    <div class=" sousForm">
            <div class="form-group">
                <label>Pseudo</label>
                <input type="text" name="pseudo" class="form-control" value="<%=ads.pseudo%>">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" name="email" class="form-control" value="<%=ads.email%>">
            </div>
            <div class="form-group">
                <label>Téléphone</label>
                <input type="number" name="phone" class="form-control" value="<%=ads.phone%>">
            </div>
            
        </div>  
    </div>    
            <button type="submit" class="btn btn-primary btn-lg mt-3 mb-5" style="width:200px; height:40px;">Modifier</button>
        
        
        </form>
</div>
</body>
</html>