<html>
        <% include partials/header.ejs %>
<body>
    
<div class="container annonce d-flex justify-content-center">
    <div class= "sousContainer">
        <ul class="d-flex flex-row justify-content-start list-group">
          <li class="list-group toutes"><a href="?type=<%=type%>" class="d-flex">Toutes</a></li>
           <li class="list-group "><a href="?selection=particuliers&type=<%=type%>" class="d-flex particuliers">Particuliers</a></li>
           <li class="list-group "><a href="?selection=professionnels&type=<%=type%>" class="professionnels d-flex">Professionnels</a></li>
        </ul>
            <a href="https://www.lereacteur.io/" target="_blank">
                <div class="row d-flex fiche">
                    <div class="photo">
                        <img class="photoImg" src="/uploads/lereacteur.png" %>" alt="photo">
                    </div>
                    <div>
                        <h6 class="title">LeReacteur</h6>
                        <h6 class="city">Paris</h6>
                        <h6 class="price">Devenez un Pro du dévelopement Web & mobile</h6>
                    </div>
                </div>
            </a> 

    <% for(var i=0; i < ads.length; i++){ %>
        <a href="http://localhost:3000/annonce/<%=ads[i]._id%>">
            <div class="row d-flex fiche">
                <div class="photo">
                    <img class="photoImg" src="/uploads/<%= ads[i].photo[0] || "default.png" %>" alt="photo">
                </div>
                <div>
                    <h6 class="title"><%=ads[i].title%></h6>
                    <h6 class="city"><%=ads[i].city%></h6>
                    <h6 class="price"><%=ads[i].price%> €</h6>
                </div>
            </div>
        </a> 
        <% if(i%10===0 && i !==0) { %>
            <a href="https://www.lereacteur.io/" target="_blank">
                <div class="row d-flex fiche">
                    <div class="photo">
                        <img class="photoImg" src="/uploads/lereacteur.png" %>" alt="photo">
                    </div>
                    <div>
                        <h6 class="title">LeReacteur</h6>
                        <h6 class="city">Paris</h6>
                        <h6 class="price">Devenez un Pro du dévelopement Web & mobile</h6>
                    </div>
                </div>
            </a> 
        <% }%>
    <%}%>

    </div>
</div>

    <nav aria-label="Page navigation example" class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item">
            <a class="page-link" href="/?page=<%=currentPage-1%>&type=<%=type%>" tabindex="-1">Précedent</a>
            </li>
            <li class="page-item"><a class="page-link" href="/?page=1&type=<%=type%>">1</a></li>
            <% for(var i=2; i<= nbrPages; i++){%>
            <li class="page-item"><a class="page-link" href="/?page=<%=i%>&type=<%=type%>"><%=i%></a></li>
            <%}%>
            <li class="page-item">
            <a class="page-link" href="/?page=<%=currentPage+1%>&type=<%=type%>">Suivant</a>
            </li>
        </ul>
    </nav>




</body>
</html>